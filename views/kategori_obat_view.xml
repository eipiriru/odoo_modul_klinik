<odoo>
    <data>
        <record id="nur_klinik.kategori_obat_tree_view" model="ir.ui.view">
            <field name="name">nur_klinik.kategori_obat_tree_view</field>
            <field name="model">nur_klinik.kategori_obat</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Kategori Obat">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="nur_klinik.kategori_obat_form_view" model="ir.ui.view">
            <field name="name">nur_klinik.kategori_obat_form_view</field>
            <field name="model">nur_klinik.kategori_obat</field>
            <field name="arch" type="xml">
                <form string="Kategori Obat">
                    <sheet>
                        <group>
                            <group colspan="2">
                                <field name="name"/>
                                <field name="deskripsi"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="nur_klinik_action_kategori_obat" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Kategori Obat</field>
            <field name="res_model">nur_klinik.kategori_obat</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Belum ada data
                </p>
            </field>
        </record>
    </data>
</odoo>